# estruturas de decisão 

def simples(cor):
    if cor == 'azul':
        return 'escolheu certo'

def medio (cor):
    if cor == 'azul':
        return 'escolheu certo'
    else:
        return 'tente outra vez'

    def completo (cor):
        if cor == 'azul':
            return 'escolheu certo' 
        elif cor == 'marrom' :
            return 'não tem salvação'
        else:
            return 'tente outra vez'

